<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.MakeMyVoiceHeard.AppWidgetContainer">

    <TextView
        android:id="@+id/widget_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:background="?attr/appWidgetBackgroundColor"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/app_name"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_representative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_label"
        android:layout_margin="4dp"
        android:background="?attr/appWidgetBackgroundColor"
        android:contentDescription="@string/appwidget_text"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="8sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/widget_senator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@+id/widget_representative"
        android:background="?attr/appWidgetBackgroundColor"
        android:contentDescription="@string/appwidget_text"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="8sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/widget_senator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@+id/widget_senator1"
        android:background="?attr/appWidgetBackgroundColor"
        android:contentDescription="@string/appwidget_text"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="8sp"
        android:textStyle="bold" />
</RelativeLayout>